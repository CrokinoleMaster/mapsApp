doctype
html(ng-app='myApp')
    head
        title map app
        link(rel='stylesheet' href='https://api.tiles.mapbox.com/mapbox.js/v1.6.2/mapbox.css')
        link(rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/foundation/5.2.2/css/foundation.min.css")
        link(rel="stylesheet" href="main.css")

    body
        section
            nav.top-bar(ng-controller='NavController')
                ul.title-area
                    li.name
                        h1
                            a(href='#') Home
                    li.toggle-topbar.menu-icon
                        a Menu
                section.top-bar-section
                    ul
                        li(ng-repeat='link in links' ng-class='{active:getActive(link)}')
                            a(href='#{{ link.url }}' ng-bind='link.title')

        div(ng-view='')

        script(src='http://cdn.leafletjs.com/leaflet-0.7.1/leaflet.js')
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
        script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.5/angular.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.0-beta.3/angular-route.min.js')
        script(src='lib/angular-leaflet.min.js')
        script(src='app.js')